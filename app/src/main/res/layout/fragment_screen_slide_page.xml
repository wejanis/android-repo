<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/lvExerciseSets"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#CCCCCC"
        android:dividerHeight="1dp">

    </ListView>



    <TextView style="?android:textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:text="No Workouts Logged"
        android:layout_centerInParent="true"
        android:id="@android:id/empty"/>

    <ImageView android:src='@drawable/ic_add_black'
        android:layout_below="@android:id/empty"
        android:layout_centerInParent="true"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/ivAddExercise"
        android:clickable="true"/>

    <TextView
        android:id="@+id/tvAddExercise"
        android:text="Add Exercise"
        android:layout_below="@+id/ivAddExercise"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />


</RelativeLayout>